<h1>未分類動画</h1>

<% if @saved_videos.present? %>
    <p>フォルダ分けしてください</p>
    <% @saved_videos.each do |video| %>
    <div class="video-item">
        <%= video_tag video.url, controls: true, width: 320 %>

        <%= form_with url: saved_video_path(video), method: :patch do |f| %>
        <%= f.label :folder_id, "フォルダを選択：" %>
        <%= select_tag :folder_id, options_from_collection_for_select(@folders, :id, :name, video.folder_id), include_blank: "未分類" %>
        <%= f.submit "移動" %>
        <% end %>
        <%= button_to "削除", saved_video_path(video),
            method: :delete,
            form: { data: { turbo_confirm: "この動画を削除しますか？" } },
            class: "btn btn-danger" %>
    </div>
    <% end %>
<% else %>
    <p>保存した動画はありません</p>
<% end %>

<div class="actions">
  <%= link_to "フォルダ一覧", folders_index_path, class: "btn btn-tertiary" %>
  <%= link_to "マイページ", mypage_path, class: "btn btn-secondary" %>
</div>