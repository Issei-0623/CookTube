<div class="auth-page">
  <div class="auth-container">

    <h2>登録情報を編集</h2>

    <%= form_for(resource, as: resource_name,
                 url: registration_path(resource_name),
                 html: { method: :put }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname, "ニックネーム" %><br />
        <%= f.text_field :nickname,
              value: resource.nickname,
              autofocus: true,
              autocomplete: "nickname",
              placeholder: "（任意）" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email,
              value: resource.email,
              autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="field">
          確認待ちのメールアドレス：
          <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :current_password, "現在のパスワード" %>
        <i>（変更を確定するために必要）</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

    <hr />

      <div class="field">
        <%= f.label :password, "新しいパスワード" %>
        <i>（変更しない場合は空欄）</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions actions--row">
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <%= link_to "戻る", :back, class: "btn btn-secondary" %>
      </div>
    <% end %>
    <hr />

    <h3>アカウントの削除</h3>

    <p>退会しますか？</p>

    <%= button_to "アカウントを削除する",
          registration_path(resource_name),
          data: { turbo_confirm: "本当に削除しますか？" },
          method: :delete %>
  </div>
</div>
