<h1><%= @folder.name %> フォルダの動画</h1>

<% if @saved_videos.any? %>
  <% @saved_videos.each do |video| %>
    <div class="video-item" style="margin-bottom: 40px;">

      <% if video.nickname.present? %>
        <strong><%= video.nickname %></strong><br>
        <% if video.username.present? %>
          <%= video.username %>
        <% end %>
      <% end %>

      <p><%= video.title %></p>

      <iframe
        src="<%= video.url %>"
        width="360"
        height="640"
        frameborder="0"
        allowfullscreen>
      </iframe>

      <%= button_to "削除",
            saved_video_path(video),
            method: :delete,
            form: { data: { turbo_confirm: "この動画を削除しますか？" } },
            class: "btn btn-danger" %>
    </div>
  <% end %>
<% else %>
  <p>このフォルダには動画がありません。</p>
<% end %>

<div class="actions">
  <%= link_to "フォルダ一覧", folders_index_path, class: "btn btn-tertiary" %>
  <%= link_to "保存動画に戻る", saved_videos_path, class: "btn btn-secondary" %>
</div>
