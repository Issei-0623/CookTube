<body class="mypage search-page-wrapper">
  <div class="search-page">
    <h1><%= @folder.name %> フォルダの動画</h1>

    <% if @saved_videos.any? %>
      <div class="video-grid">
        <% @saved_videos.each do |video| %>
          <%= render "shared/video_card", video: video do %>
            <%= button_to "このフォルダから外す",
                remove_from_folder_saved_video_path(video, folder_id: @folder.id),
                method: :post,
                class: "btn btn-secondary" %>

            <%= button_to "削除",
                saved_video_path(video),
                method: :delete,
                form: { data: { turbo_confirm: "この動画を削除しますか？" } },
                class: "btn btn-danger" %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p>このフォルダには動画がありません。</p>
    <% end %>

    <div class="actions--row">
      <%= link_to "フォルダ一覧", folders_index_path, class: "btn btn-folder" %>
      <%= link_to "保存動画に戻る", saved_videos_path, class: "btn btn-saved-video" %>
    </div>
  </div>
</body>